<%= simple_form_for :buy_facility, :url => url_for(:controller => 'facilities', :action => 'buy_facility')  do |f| %>
  <%= f.input :id, :collection => @facilities, :label => 'Facility: ' %>
  <%= f.input :planet, :collection => @planet, :label => 'Planet: ' %>
  <%= f.button :submit %>
<% end %>
