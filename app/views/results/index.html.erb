<%= simple_form_for :results do |f| %>
  <% @results.each do |result| %>
    <%= simple_fields_for result do |result_form| %>
       <%= result_form.object.quantity %>
       <%= result_form.object.generic_unit.name %>
       <%= result_form.input :quantity, :as => :hidden %>
       <%= result_form.association :generic_unit, :as => :hidden %>
       <%= result_form.association :generic_fleet, :as => :hidden %>
       <%= result_form.association :planet, :as => :hidden %>
       <%= result_form.association :round, :as => :hidden %>
       <%= result_form.association :squad, :as => :hidden %>
       <%= result_form.input :blasted, :size => 3 %>
       <%= result_form.input :fled, :size => 3 %>
       <%= result_form.input :captured, :size => 3 %>
       <%= result_form.association :captor, :collection => @squads %>
       <br>
    <% end %>
  <% end %>
  <%= f.button :submit %>
<% end %>
